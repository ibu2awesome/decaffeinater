{
  "name": "decaffeinater",
  "description": "An app which closes apps if you use them too much.",
  "version": "1.3.0-rc.1",
  "main": "app/main.js",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/ibujs/decaffeinater.git"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "semantic-ui-react": "^0.67.0"
  },
  "scripts": {
    "build": "webpack --progress",
    "watch": "webpack -w --progress",
    "start": "npm run build && electron .",
    "nobuild": "electron .",
    "dist": "npm run build && build",
    "pack": "npm run build && build --dir",
    "make-exe": "npm run dist && node build/build.js",
    "test": "mocha --require babel-register"
  },
  "devDependencies": {
    "@types/babel-core": "^6.7.14",
    "@types/chai": "^3.4.35",
    "@types/electron": "^1.4.32",
    "@types/electron-builder": "^2.0.29",
    "@types/mocha": "^2.2.39",
    "@types/react": "^15.0.12",
    "@types/react-dom": "^0.14.23",
    "@types/webpack": "^2.2.7",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.3.2",
    "babel-preset-babili": "^0.0.11",
    "babel-preset-env": "^1.1.10",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "chai": "4.0.0-canary.1",
    "copy-webpack-plugin": "^4.0.1",
    "devtron": "^1.4.0",
    "electron": "1.6.1",
    "electron-builder": "^13.9.0",
    "electron-devtools-installer": "^2.1.0",
    "electron-installer-dmg-yarn": "^0.2.0-yarn3",
    "electron-packager": "^8.5.2",
    "electron-winstaller": "^2.5.2",
    "eslint": "^3.16.1",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "flow-bin": "^0.40.0",
    "mocha": "^3.2.0",
    "webpack": "^2.2.1"
  },
  "build": {
    "appId": "com.decaffeinater",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": "deb",
      "synopsis": "An app which closes apps if you use them too much.",
      "category": "Utility",
      "desktop": "build/decaffeinater.desktop"
    }
  },
  "optionalDependencies": {
    "electron-installer-debian": "^0.5.0",
    "electron-installer-redhat": "^0.3.1"
  }
}
